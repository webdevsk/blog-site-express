<%- include('./partials/header') -%>

<div class="section py-8">
    <div class="container">
        <h1 class="text-3xl text-amber-900 font-bold">Hello World</h1>
    </div>
</div>

<div class="section py-8">
    <div class="container">
        <% blogPosts.map(({title, body})=>{ %>
            <div class="post mb-4 sm:mb-6">
                <a href="/posts/<%= title %>" class="inline-block mb-2 text-lg sm:text-2xl text-amber-500 font-bold hover:text-amber-950">
                    <%= title %>
                </a>
                <p class="ms-2 sm:ms-4 test-sm sm:text-base">
                    <% if (body.length >= 200) { %>
                            <%= body?.slice(0, 199) %>
                            .....<a class="text-amber-500 hover:text-amber-950" href="\posts\<%= title %>">read more.</a>
                    <% } else {%>
                            <%= body %>
                    <% }%>
                </p>
            </div>
        <% }) %>
    </div>
</div>
<%- include('./partials/footer') -%>